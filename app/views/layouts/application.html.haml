%html
  %head
    %title Elt
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          - text = fa_icon(:beer, text: "Tokyu08 - #{current_user.nickname}")
          = link_to text, root_path, class: 'navbar-brand'
        .navbar-collapse.collapse.navbar-right
          %ul.nav.navbar-nav
            %li
              = link_to 'Sign out', signout_path, method: :delete

      -# TODO: アラートがなかったときのスタイルをつける？
      %p.alert.alert-warning{role: 'alert'}
        = notice
      %p.alert.alert-danger{role: 'alert'}
        = alert

    .container
      = yield
